{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "posts.edit.v3",
  "title": "posts.edit",
  "description": "Schema for posts.edit",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "posts": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "allOf": [{ "$ref": "posts.v3#/definitions/post" }],
        "required": ["updated_at"]
      }
    }
  },
  "required": ["posts"]
}
