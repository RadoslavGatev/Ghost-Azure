{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "labels.canary",
  "title": "labels",
  "description": "Base labels definitions",
  "definitions": {
    "label": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 191,
          "pattern": "^([^,]|$)"
        },
        "slug": {
          "type": ["string", "null"],
          "maxLength": 191
        },
        "id": {
          "strip": true
        },
        "created_at": {
          "strip": true
        },
        "created_by": {
          "strip": true
        },
        "updated_at": {
          "strip": true
        },
        "updated_by": {
          "strip": true
        }
      }
    }
  }
}
