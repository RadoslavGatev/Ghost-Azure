<article class="rule fail">
    <p>{{{rule}}}</p>
    {{> toggle}}

    <div class="details hide">
        {{#if message}}
            <p>{{message}}</p>
        {{/if}}

        {{#if details}}
            <p>{{{details}}}</p>
        {{/if}}

        {{#if failures}}
        <div><h4>Affected files:</h4></div>
        <ul>
            {{#each failures}}
            <li><strong>{{ref}}:</strong> {{message}}</li>
            {{/each}}
        </ul>
        {{/if}}


    </div>
</article>
