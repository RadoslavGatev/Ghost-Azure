{
    "index": {
        "route": "/",
        "frontPageTemplate": "home"
    },
    "tag": {
        "route": "/:t_tag/:slug/",
        "postOptions": {
            "filter": "tags:'%s'+tags.visibility:public"
        },
        "data": {
            "tag": {
                "type": "read",
                "resource": "tags",
                "options": {
                    "slug": "%s",
                    "visibility": "public"
                }
            }
        },
        "slugTemplate": true,
        "editRedirect": "#/settings/tags/:slug/"
    },
    "author": {
        "route": "/:t_author/:slug/",
        "postOptions": {
            "filter": "author:'%s'"
        },
        "data": {
            "author": {
                "type": "read",
                "resource": "users",
                "options": {
                    "slug": "%s"
                }
            }
        },
        "slugTemplate": true,
        "editRedirect": "#/team/:slug/"
    }
}
